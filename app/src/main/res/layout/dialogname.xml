<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:id="@+id/tvdname"
        android:layout_marginLeft="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvdiagname"
        android:layout_marginLeft="71dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvdname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okay"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvdname"
        android:layout_alignStart="@+id/tvdname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call"
        android:id="@+id/call"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/okay"
        android:layout_toRightOf="@+id/okay" />

</RelativeLayout>